<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3"
        xmlns:views="clr-namespace:Labb3.Views"
        xmlns:viewmodels="clr-namespace:Labb3.ViewModels"
        mc:Ignorable="d"
       d:Height="450" d:Width="800"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>

    
    <Window.Resources>

        <DataTemplate DataType="{x:Type viewmodels:ConfigurationViewModel}">
            <views:ConfigurationView Grid.Row="1" />
        </DataTemplate>


        <DataTemplate DataType="{x:Type viewmodels:PlayerViewModel}">
            <views:PlayerView Grid.Row="1"  />
        </DataTemplate>

    </Window.Resources>


    <Window.InputBindings>
        <KeyBinding Command="{Binding PlayerViewModel.NewQuestionPack}" Gesture="Ctrl+N" />
        <KeyBinding Command="{Binding PlayerViewModel.DeleteQuestionPack}" Gesture="Delete" />
        <KeyBinding Command="{Binding PlayerViewModel.ImportQuestionPack}" Gesture="Ctrl+I" />
        <KeyBinding Command="{Binding PlayerViewModel.EditQuestion}" Gesture="Ctrl+E" />
        <KeyBinding Command="{Binding PlayerViewModel.EditQuestion}" Gesture="Ctrl+E" />
        <KeyBinding Command="{Binding PlayerViewModel.FullScreen}" Gesture="F11" />
        <KeyBinding Command="{Binding PlayerViewModel.RemoveQuestion}" Gesture="Ctrl+R" />
        <KeyBinding Command="{Binding PlayerViewModel.PackOptions}" Gesture="Ctrl+Shift" />
        <KeyBinding Command="{Binding PlayerViewModel.PlayCommand}" Gesture="Ctrl+P" />
        <KeyBinding Command="{Binding PlayerViewModel.ExitCommand}" Gesture="Esc" />
        <KeyBinding Command="{Binding PlayerViewModel.AddQuestion}" Gesture="Insert" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <views:MenuView Grid.Row="0"/>

        <ContentControl Grid.Row="1" Content="{Binding Model}" />
    </Grid>
</Window>
