<UserControl x:Class="Labb3.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu>

        <MenuItem Header="_File">
            <MenuItem Header="_New Question Pack"/>
            <MenuItem Header="Select Question Pack"/>
            <MenuItem Header="Delete Question Pack"/>
            <Separator/>
            <MenuItem Header="Import Question Pack"/>
            <Separator/>
            <MenuItem Header="E_xit"/>
        </MenuItem>
        
        <MenuItem Header="_Edit">
            <MenuItem Header="Add Question" InputGestureText="Ctrl+A"/>
            <Separator/>
            <MenuItem Header="Remove Question" InputGestureText="Ctrl+R"/>
            <Separator/>
            <MenuItem Header="Edit Question" InputGestureText="Ctrl+E"/>
            <MenuItem Header="Set Pack name" Command="{Binding PlayerViewModel.SetPackNameCommand}"/>
        </MenuItem>

        <MenuItem Header="View">
            <MenuItem Header="Play"/>
            <MenuItem Header="Edit"/>
            <Separator/>
            <MenuItem Header="Fullscreen"/>

        </MenuItem>

    </Menu>
</UserControl>
