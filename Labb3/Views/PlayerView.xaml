<UserControl x:Class="Labb3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3.Views" xmlns:viewmodels="clr-namespace:Labb3.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:PlayerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Background="White"

>
    <Grid>
        <TextBlock Text="{Binding RemainingTime}"
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,30,40,0"
                   />
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="150"
                    Width="500" Margin="0,38,0,0"      
                    >
            <TextBlock Text="{Binding QuestionCounterText, UpdateSourceTrigger = PropertyChanged}"
                       FontWeight="Bold"
                       FontSize="16"
                       
                       />
           

            <TextBlock Text="{Binding ActivePack.SelectedQuestion.Query}" FontSize="20" Height="86"/>

        </StackPanel>
        <Button x:Name="Answer1"
            Content="{Binding Answer1}"
            Background="{Binding ButtonColor1}"    
            Command="{Binding AnswerCommand}" 
            CommandParameter="0"    
            Margin="110,265,400,125"
            FontSize="12"
            Width="250"
            Height="60"/>

        <Button x:Name="Answer2"
            Content="{Binding Answer2}"
            Background="{Binding ButtonColor2}"    
            Command="{Binding AnswerCommand}"    
            CommandParameter="1"    
            Margin="440,265,110,125"
            FontSize="12"
            Width="250"
            Height="60"/>

        <Button x:Name="Answer3"
            Content="{Binding Answer3}"
            Background="{Binding ButtonColor3}"    
            Command="{Binding AnswerCommand}" 
            CommandParameter="2"    
            Margin="130,361,420,30"
            FontSize="12"
           
            Width="250"
            Height="60"/>

        <Button x:Name="Answer4"
            Content="{Binding Answer4}"
            Background="{Binding ButtonColor4}"    
            Command="{Binding AnswerCommand}"  
            CommandParameter="3"    
            Margin="440,361,110,29"
            FontSize="12"
            Width="250"
        Height="60"/>
    </Grid>
</UserControl>
